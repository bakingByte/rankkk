<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rank.activity.MainActivity"
    android:background="#eaeaea">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="#574d68">
        <RelativeLayout
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/search_box"
            >
            <ImageView
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_13sdp"
                android:background="@drawable/search"
                android:id="@+id/iv_search"/>
            <EditText
                android:layout_marginLeft="@dimen/_10sdp"
                android:hint="Search"
                android:textColorHint="@color/grey"
                android:textColor="@color/hint"
                android:textSize="@dimen/_12sdp"
                android:background="@null"
                android:layout_toRightOf="@+id/iv_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp" />
        </RelativeLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_below="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >


        <RelativeLayout
            android:id="@+id/rl_video"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:background="@drawable/video"/>
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerInParent="true"
                android:background="@drawable/play"/>
        </RelativeLayout>
<RelativeLayout
    android:layout_marginLeft="@dimen/_10sdp"
    android:id="@+id/rl_listview"
    android:layout_below="@+id/rl_video"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
       <ListView
           android:visibility="gone"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/listview"/>
    <android.support.v7.widget.RecyclerView
        android:scrollbars="horizontal"
        android:id="@+id/horizontal_recycler_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/rl_listview"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_recycle">

            <android.support.v7.widget.RecyclerView
                android:scrollbars="horizontal"
                android:id="@+id/horizontal_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_below="@+id/rl_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18sdp"
                android:text="Top Trending People"
                android:id="@+id/tv_trendingPeople"/>

            <android.support.v4.view.ViewPager
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@+id/tv_trendingPeople"
                android:id="@+id/myviewpager"
                android:layout_width="wrap_content"
                android:overScrollMode="never"
                android:layout_height="@dimen/_150sdp"
                android:paddingRight="@dimen/_10sdp"

                />

        </RelativeLayout>
    </RelativeLayout>
        </ScrollView>
    <RelativeLayout
        android:id="@+id/rlBottom"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/globe_selected"
                android:id="@+id/iv_globe"/>



            <ImageView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_53sdp"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:id="@+id/iv_location"
                android:background="@drawable/compass"/>

            <ImageView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_53sdp"
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_25sdp"
                android:id="@+id/iv_file"
                android:background="@drawable/file_unselected"/>

            <ImageView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_53sdp"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:id="@+id/iv_human"
                android:background="@drawable/human"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
