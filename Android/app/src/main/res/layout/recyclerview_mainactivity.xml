<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/notification3"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/iv_user1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_user1"
                android:text="Rahul M"
                android:id="@+id/tv_user1"
                android:textSize="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_below="@+id/tv_user1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_user1"
                android:text="Today in Mento Park,CA"
                android:id="@+id/tv_address1"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/grey"
                />

        </RelativeLayout>
        <ImageView
            android:visibility="gone"
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_360sdp"

           />
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_footer1"
            android:layout_below="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp">
            <ImageView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/like1"
                android:id="@+id/iv_like2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="240"
                android:textColor="@color/grey"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toRightOf="@+id/iv_like2"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"
                android:id="@+id/tv_like2"
                />
            <ImageView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toRightOf="@+id/tv_like2"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/unlike"
                android:id="@+id/iv_unlike2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24"
                android:textColor="@color/grey"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toRightOf="@+id/iv_unlike2"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"
                android:id="@+id/tv_unlike2"
                />

            <ImageView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toRightOf="@+id/iv_comment2"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/share"
                android:id="@+id/iv_share2"/>

            <ImageView
                android:id="@+id/iv_comment2"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/comment"
                android:layout_toRightOf="@+id/tv_unlike2"
                android:layout_marginLeft="@dimen/_60sdp"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/image1"
            android:layout_below="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
           />
        <RelativeLayout
            android:id="@+id/rl_footer2"
            android:layout_below="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp">
            <ImageView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/like1"
                android:id="@+id/iv_like1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="240"
                android:textColor="@color/grey"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toRightOf="@+id/iv_like1"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"
                android:id="@+id/tv_like1"
                />
            <ImageView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toRightOf="@+id/tv_like1"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/unlike"
                android:id="@+id/iv_unlike1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24"
                android:textColor="@color/grey"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toRightOf="@+id/iv_unlike1"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"
                android:id="@+id/tv_unlike1"
                />

            <ImageView
                android:layout_marginTop="@dimen/_5sdp"
                 android:layout_toRightOf="@+id/iv_comment1"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
               android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/share"
                android:id="@+id/iv_share1"/>

            <ImageView
                android:id="@+id/iv_comment1"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/comment"
                android:layout_toRightOf="@+id/tv_unlike1"
                android:layout_marginLeft="@dimen/_60sdp"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
