<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rank.activity.Communities">

    <TextView
        android:id="@+id/tv_communities"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="#574d68"
        android:paddingTop="@dimen/_5sdp"
        android:text="Communities"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp" />

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_communities"
        android:columnWidth="@dimen/_140sdp"
        android:horizontalSpacing="@dimen/_1sdp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/_1sdp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_globe"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/globe" />


            <ImageView
                android:id="@+id/iv_location"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_53sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/location_selected" />

            <ImageView
                android:id="@+id/iv_file"
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_53sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/file_unselected" />

            <ImageView
                android:id="@+id/iv_human"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_53sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/human" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
