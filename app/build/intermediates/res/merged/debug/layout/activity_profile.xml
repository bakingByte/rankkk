<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rank.activity.Profile"
    android:layout_gravity="right"
    android:background="#eaeaea">
    >


    <ScrollView
        android:id="@+id/scroll_side_menu"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:dividerHeight="2dp"
        android:scrollbars="none"
        android:layout_gravity="end"
        android:background="#eaeaea">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="#574d68">


                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:id="@+id/iv_back"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:background="@drawable/profile_back"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"/>

            <RelativeLayout
                android:id="@+id/rr_PROFILE"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_8sdp"
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="EDIT YOUR PROFILE"
                    android:paddingLeft="@dimen/_15sdp"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:id="@+id/tv_earn"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rr_Change_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="CHANGE PASSWORD"
                    android:paddingLeft="@dimen/_15sdp"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:id="@+id/tv_shop"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rr_BlockList"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                >



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="BLOCK LIST"
                    android:paddingLeft="@dimen/_15sdp"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:id="@+id/tv_redeem"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rr_notifications"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                >



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="NOTIFICATIONS"
                    android:paddingLeft="@dimen/_15sdp"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:id="@+id/tv_profile"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rr_VERIFY"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="VERIFY YOUR ACCOUNT"
                    android:paddingLeft="@dimen/_15sdp"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:id="@+id/et_search"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rr_LOGOUT"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="LOGOUT"
                    android:paddingLeft="@dimen/_15sdp"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:id="@+id/tv_activity"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>











        </LinearLayout>

    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <ScrollView
       android:layout_above="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_365sdp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_340sdp"
        android:background="@drawable/profile_image"/>

   <RelativeLayout
       android:id="@+id/rl_dots"
       android:layout_width="@dimen/_50sdp"
       android:layout_height="@dimen/_50sdp"
       android:layout_alignParentRight="true">

    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_alignParentRight="true"
        android:background="@drawable/dots"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"/>
</RelativeLayout>
<TextView
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_width="@dimen/_80sdp"
    android:layout_height="@dimen/_30sdp"
    android:text="+ Follow"
    android:textColor="@color/white"
    android:paddingTop="@dimen/_7sdp"
    android:paddingLeft="@dimen/_18sdp"
    android:background="@drawable/following_box2"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="@dimen/_40sdp"
    android:textSize="@dimen/_12sdp"/>
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/message"/>
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_60sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/flag"/>
            <ImageView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/following"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/tv_user"/>
            <TextView
                android:id="@+id/tv_user"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/black"
                android:text="@string/user_name"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>


        <TextView
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_designation"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="#574d68">
                <TextView
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Posts"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_marginLeft="@dimen/_55sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Following"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_marginLeft="@dimen/_55sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Followers"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                >
                <TextView
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_marginLeft="@dimen/_80sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5000"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_marginLeft="@dimen/_100sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"/>
            </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/_35sdp"
    android:background="#574d68"
    android:orientation="horizontal">

    <TextView
        android:layout_marginLeft="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:text="Rank"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"/>
    <View
        android:layout_width="@dimen/_4sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/grey"/>

    <Spinner
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Spinner"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"


        />
    <RelativeLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/rr_popup"
        android:background="@color/green">

        <TextView
            android:paddingLeft="@dimen/_30sdp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_15sdp"
            android:text="Hide All"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:id="@+id/tvLanguage"
            android:textSize="@dimen/_13sdp"
            />

        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_5sdp"
            android:background="@drawable/dropdown"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>



</LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.rank.helper.ExpandableHeightGridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gridview"
            android:gravity="center"
            android:verticalSpacing="@dimen/_minus38sdp"
            android:horizontalSpacing="@dimen/_1sdp"
            android:isScrollContainer="false"
            android:columnWidth="@dimen/_120sdp"
            android:nestedScrollingEnabled="true"
            android:numColumns="3"
            android:stretchMode="columnWidth"

            />
        </RelativeLayout>
        </LinearLayout>
    </ScrollView>


    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/globe"
                android:id="@+id/iv_globe"/>



            <ImageView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_53sdp"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:id="@+id/iv_location"
                android:background="@drawable/compass"/>

            <ImageView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_53sdp"
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_25sdp"
                android:id="@+id/iv_file"
                android:background="@drawable/file_unselected"/>

            <ImageView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_53sdp"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:id="@+id/iv_human"
                android:background="@drawable/profile_selected"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>



</android.support.v4.widget.DrawerLayout>